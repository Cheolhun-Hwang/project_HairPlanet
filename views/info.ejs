    <script>
        $(document).ready(function() {
            // Add smooth scrolling to all links in navbar + footer link
            $(".navbar a, footer a[href='#myPage'], #link a[href='#contact']").on('click', function(event) {
                // Make sure this.hash has a value before overriding default behavior
                if (this.hash !== "") {
                    // Prevent default anchor click behavior
                    event.preventDefault();

                    // Store hash
                    var hash = this.hash;

                    // Using jQuery's animate() method to add smooth page scroll
                    // The optional number (900) specifies the number of milliseconds it takes to scroll to the specified area
                    $('html, body').animate({
                        scrollTop: $(hash).offset().top
                    }, 900, function() {

                        // Add hash (#) to URL when done scrolling (default click behavior)
                        window.location.hash = hash;
                    });
                } // End if
            });

            $(window).scroll(function() {
                $(".slideanim").each(function() {
                    var pos = $(this).offset().top;

                    var winTop = $(window).scrollTop();
                    if (pos < winTop + 600) {
                        $(this).addClass("slide");
                    }
                });
            });

            $("#appointBTN").click(function() {
                if(confirm("예약하시겠습니까?")){
                    <% if(upoint==null){ %>
                    let upoint =0;
                    <% }else{ %>
                    let upoint = <%= upoint %>;
                    <% } %>
                    let nowPoint = $('#point').val();

                    if(upoint < nowPoint){
                        alert("보유한 포인트 이상을 이용하실 수 없습니다.");
                    }else{
                        var nowdt = new Date();
                        var inputdt = $('#date').val();
                        var selectdt = new Date(inputdt);

                        if(nowdt > selectdt){
                            alert("예약날짜를 다시 확인해 주세요.");
                        }else{
                            let price=$('#type > option:selected').attr('data-no');

                            var form = document.getElementById('appointform');
                            form.setAttribute('method', 'post');
                            form.setAttribute('action', 'info/appoint?sid=<%=sinfo[0].sid%>&price='+price );
                            form.style.display = 'hidden';
                            form.submit();
                            alert("예약을 완료하였습니다.");
                        }
                    }
                }else{
                    alert("예약을 취소하셨습니다.");
                }
            });
        })
